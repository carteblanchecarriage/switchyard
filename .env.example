# Keebshelf Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# =============================================
# NODE ENVIRONMENT
# =============================================
NODE_ENV=production
PORT=3003

# =============================================
# DATABASE (Supabase)
# =============================================
# Uncomment and fill in to enable price tracking & user accounts
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# =============================================
# EMAIL SERVICE
# =============================================
# Choose ONE email provider:

# Option 1: SendGrid (Recommended)
# SENDGRID_API_KEY=SG.xxxxxxxx

# Option 2: Mailgun
# MAILGUN_API_KEY=key-xxxxxxxx
# MAILGUN_DOMAIN=mg.yourdomain.com

# Option 3: AWS SES
# AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
# AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxx
# AWS_REGION=us-east-1

# =============================================
# MONITORING & ALERTING
# =============================================
# Webhook URL for alerts (Discord/Slack)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Uptime monitoring (optional)
UPTIMEROBOT_API_KEY=urxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# =============================================
# CLOUDFLARE (for tunnel)
# =============================================
# Only needed if using Cloudflare tunnel
# CLOUDFLARE_TUNNEL_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# CLOUDFLARE_TUNNEL_TOKEN=eyJ...

# =============================================
# API CONFIGURATION
# =============================================
# Rate limiting (requests per window)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Cache duration (milliseconds)
CACHE_TTL=60000

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# =============================================
# SCRAPER CONFIGURATION
# =============================================
# Scraping interval in minutes (for PM2 cron)
SCRAPER_INTERVAL=30

# Maximum retries for failed scrapes
SCRAPER_MAX_RETRIES=3

# User agent for scraping
SCRAPER_USER_AGENT="Mozilla/5.0 (compatible; KeebshelfBot/2.0)"

# =============================================
# FRONTEND URLS (for CORS)
# =============================================
CORS_ORIGIN_PROD=https://carteblanchecarriage.github.io
CORS_ORIGIN_LOCAL=http://localhost:8080

# =============================================
# DEVELOPMENT ONLY
# =============================================
DEBUG=false
LOG_LEVEL=info
